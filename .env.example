# ============================================================
# CareerPilot AI - Environment Variables Template
# ============================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================
# Google Cloud Platform (Vertex AI) - REQUIRED
# ============================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
# This should be path to your service account JSON file
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
# Save as: apps/agents/service-account.json
GOOGLE_APPLICATION_CREDENTIALS=./apps/agents/service-account.json

# ============================================================
# Google Gemini API - REQUIRED
# ============================================================
GEMINI_API_KEY=your-gemini-api-key-here
# Get your free API key: https://aistudio.google.com/app/apikey

# ============================================================
# Google Custom Search API - OPTIONAL (uses seed data fallback)
# ============================================================
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-custom-search-engine-id

# ============================================================
# College Scorecard API - OPTIONAL (uses estimates fallback)
# ============================================================
SCORECARD_API_KEY=your-scorecard-api-key
# Get free API key: https://collegescorecard.ed.gov/data/documentation/

# ============================================================
# BLS (Bureau of Labor Statistics) API - OPTIONAL (uses seed data fallback)
# ============================================================
BLS_API_KEY=your-bls-api-key
# Register: https://www.bls.gov/developers/home.htm

# ============================================================
# Cloudflare Worker (Optional)
# ============================================================
PYTHON_AGENT_API_URL=http://localhost:8000/api/plan
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id
CLOUDFLARE_KV_NAMESPACE_ID=your-kv-namespace-id

# ============================================================
# Next.js Frontend
# ============================================================
NEXT_PUBLIC_WORKER_API_URL=http://localhost:8787

# ============================================================
# Application Settings
# ============================================================
AGENT_SERVER_PORT=8000
ENVIRONMENT=development
DEBUG=false
CACHE_TTL=604800
AGENT_TIMEOUT=30
